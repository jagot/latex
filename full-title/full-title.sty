\ifluatex
\begin{luacode}
function is_upper(word)
   return word:sub(1,1) == word:upper():sub(1,1)
end

function print_segment(a, c)
   if #a == 0 then
      return
   end
   if c then
      w = "atitle"
   else
      w = "btitle"
   end
   tex.print(table.concat({"{\\", w, "{",
                       table.concat(a, " "), 
                       "}}"}, ""))
end

function autotitle(title)
   a = {}
   c = false
   for i in string.gmatch(title, "%S+") do
      ic = is_upper(i)
      if ic == c then
         table.insert(a, i)
      else
         print_segment(a, c)
         a = {i}
         c = ic
      end
   end
   print_segment(a, c)
end
\end{luacode}
\fi

\newcommand{\autotitle}[1]{%
  \ifluatex
  \directlua{autotitle("\@title")}
  \else
  {\atitle{#1}}
  \fi
}

