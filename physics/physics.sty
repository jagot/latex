\RequirePackage{maths}

\newcommand{\conf}[1]{\mathrm{#1}}

\newcommand{\ket}[1]{|#1\rangle}
\newcommand{\bra}[1]{\langle #1|}
\newcommand{\matrixel}[3]{\langle #1|#2|#3\rangle}
\newcommand{\redmatrixel}[3]{\langle #1\|#2\|#3\rangle}
\newcommand{\braket}[2]{\langle #1|#2\rangle}
\newcommand{\ketbra}[3][]{|#2\rangle#1\langle #3|}
\newcommand{\expect}[1]{\langle #1\rangle}
\newcommand{\cc}{\textrm{c.c.}}

\newcommand{\ham}{\op{h}}
\newcommand{\Ham}{\op{H}}
\newcommand{\HamI}{\Ham_{\textrm{I}}}
