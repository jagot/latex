% Quantities
\newcommand{\rmsub}[2]{#1_{\textrm{#2}}}
\newcommand{\Up}{\rmsub{U}{p}}
\newcommand{\Ip}{\rmsub{I}{p}}
\newcommand{\muB}{\rmsub{\mu}{B}}
\newcommand{\kB}{\rmsub{k}{B}}
\newcommand{\Wk}{\rmsub{W}{k}}
