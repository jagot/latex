% Angular momenta
\newcommand{\threej}[2]
{
  \left(
    \begin{array}{rrr}
          #1\\#2
    \end{array}
  \right)
}
\newcommand{\sixj}[2]
{
  \left\{
    \begin{array}{rrr}
      #1\\#2
    \end{array}
  \right\}
}
\newcommand{\ninej}[3]
{
  \left\{
    \begin{array}{rrr}
      #1\\#2\\#3
    \end{array}
  \right\}
}



\newcommand{\IIIj}[2]{\pmat{#1\\#2}}
\newcommand{\VIj}[2]{\Bmat{#1\\#2}}
\newcommand{\IXj}[3]{\Bmat{#1\\#2\\#3}}